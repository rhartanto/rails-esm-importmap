<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table id="books-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Publication year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.publication_year %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
  <tr><td>Total</td><td id="rows-total"></td></tr>
  </tfoot>

</table>

<br>

<%= link_to 'New Book', new_book_path %>

<%# ------ THIS IS IMPORT MAP SCRIPT (ES6) REFERENCE  ----------- %>
<% content_for :head do %>
  <%= javascript_import_module_tag "esm/ui/books/book_list" %>
<% end %>